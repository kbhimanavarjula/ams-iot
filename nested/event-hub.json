{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "eventHub": {
            "type": "object"
        },
        "omsSettings": {
            "type": "object"
        }
    },
    "variables": {},
    "resources": [
        {
            "apiVersion": "2017-04-01",
            "name": "[parameters('eventHub').namespaceName]",
            "type": "Microsoft.EventHub/Namespaces",
            "location": "[parameters('eventHub').location]",
            "sku": {
                "name": "Standard"
            },
            "properties": {
                "isAutoInflateEnabled": "true",
                "maximumThroughputUnits": "2"
            },
            "resources": [
                {
                    "name": "Microsoft.Insights/service",
                    "type": "providers/diagnosticSettings",
                    "apiVersion": "[parameters('omsSettings').omsEnableApiVersion]",
                    "dependsOn": [
                        "[concat('Microsoft.EventHub/Namespaces/', parameters('eventHub').namespaceName)]"
                    ],
                    "properties": {
                        "workspaceId": "[resourceId('Microsoft.OperationalInsights/workspaces/', parameters('omsSettings').omsWorkspaceName)]",
                        "logs": [
                            {
                                "category": "ArchiveLogs",
                                "enabled": true,
                                "retentionPolicy": {
                                    "days": 0,
                                    "enabled": false
                                }
                            },
                            {
                                "category": "OperationalLogs",
                                "enabled": true,
                                "retentionPolicy": {
                                    "days": 0,
                                    "enabled": false
                                }
                            },
                            {
                                "category": "AutoScaleLogs",
                                "enabled": true,
                                "retentionPolicy": {
                                    "days": 0,
                                    "enabled": false
                                }
                            }
                        ],
                        "metrics": [
                            {
                                "timeGrain": "AllMetrics",
                                "category": "AllMetrics",
                                "enabled": true,
                                "retentionPolicy": {
                                    "enabled": false,
                                    "days": 0
                                }
                            }
                        ]
                    }
                },
                {
                    "apiVersion": "2017-04-01",
                    "name": "[parameters('eventHub').eventHubName]",
                    "type": "EventHubs",
                    "dependsOn": [
                        "[concat('Microsoft.EventHub/namespaces/', parameters('eventHub').namespaceName)]"
                    ],
                    "properties": {
                        "messageRetentionInDays": "3",
                        "partitionCount": "4"
                    },
                    "resources": [
                        {
                            "apiVersion": "2014-09-01",
                            "name": "EventHubOwner",
                            "type": "AuthorizationRules",
                            "dependsOn": [
                                "[parameters('eventHub').eventHubName]"
                            ],
                            "properties": {
                                "keyName": "EventHubOwner",
                                "claimType": "SharedAccessKey",
                                "claimValue": "None",
                                "primaryKey": "[parameters('eventHub').primaryKey]",
                                "secondaryKey": "[parameters('eventHub').secondaryKey]",
                                "rights": [
                                    "Manage",
                                    "Send",
                                    "Listen"
                                ],
                                "revision": -1
                            }
                        }
                    ]
                }
            ]
        }
    ]
}
