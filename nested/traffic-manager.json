{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "trafficManagerSettings": {
            "type": "object"
        },
        "webApp": {
            "type": "object"
        },
        "restServer": {
            "type": "object" 
        }
    },
    "variables": {},
    "resources": [
        {
            "apiVersion": "[parameters('trafficManagerSettings').trafficManagerApiVersion]",
            "type": "Microsoft.Network/trafficmanagerprofiles",
            "name": "[parameters('trafficManagerSettings').trafficManagerName]",
            "location": "global",
            "properties": {
                "trafficRoutingMethod": "[parameters('trafficManagerSettings').trafficRoutingMethod]",
                "dnsConfig": {
                    "relativeName": "[parameters('trafficManagerSettings').trafficManagerName]",
                    "ttl": "100"
                },
                "monitorConfig": {
                    "protocol": "https",
                    "port": "443",
                    "path": "/"
                },
                "endpoints": [
                    {
                        "name": "[parameters('webApp').webSiteName]",
                        "type": "Microsoft.Network/trafficManagerProfiles/azureEndpoints",
                        "properties": {
                            "endpointStatus": "Enabled",
                            "targetResourceId": "[resourceId('Microsoft.Web/sites', parameters('webApp').webSiteName)]",
                            "weight": 1,
                            "priority": 1,
                            "endpointLocation": "[parameters('webApp').location]"
                        }
                    },
                    {
                        "name": "[parameters('webApp').webSiteNameDr]",
                        "type": "Microsoft.Network/trafficManagerProfiles/azureEndpoints",
                        "properties": {
                            "endpointStatus": "Enabled",
                            "targetResourceId": "[resourceId('Microsoft.Web/sites', parameters('webApp').webSiteNameDr)]",
                            "weight": 1,
                            "priority": 2,
                            "endpointLocation": "[parameters('webApp').locationDr]"
                        }
                    }
                ]
            }
        },
        {
            "apiVersion": "[parameters('trafficManagerSettings').trafficManagerApiVersion]",
            "type": "Microsoft.Network/trafficmanagerprofiles",
            "name": "[parameters('trafficManagerSettings').trafficManagerName1]",
            "location": "global",
            "properties": {
                "trafficRoutingMethod": "[parameters('trafficManagerSettings').trafficRoutingMethod]",
                "dnsConfig": {
                    "relativeName": "[parameters('trafficManagerSettings').trafficManagerName1]",
                    "ttl": "100"
                },
                "monitorConfig": {
                    "protocol": "https",
                    "port": "443",
                    "path": "/"
                },
                "endpoints": [
                    {
                        "name": "[parameters('restServer').apiServerName]",
                        "type": "Microsoft.Network/trafficManagerProfiles/azureEndpoints",
                        "properties": {
                            "endpointStatus": "Enabled",
                            "targetResourceId": "[resourceId('Microsoft.Web/sites', parameters('restServer').apiServerName)]",
                            "weight": 1,
                            "priority": 1,
                            "endpointLocation": "[parameters('webApp').location]"
                        }
                    },
                    {
                        "name": "[parameters('webApp').apiServerNameDr]",
                        "type": "Microsoft.Network/trafficManagerProfiles/azureEndpoints",
                        "properties": {
                            "endpointStatus": "Enabled",
                            "targetResourceId": "[resourceId('Microsoft.Web/sites', parameters('restServer').apiServerNameDr)]",
                            "weight": 1,
                            "priority": 2,
                            "endpointLocation": "[parameters('restServer').locationDr]"
                        }
                    }
                ]
            }
        }
    ]
}
